<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_below="@id/txtlogo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgQuiz"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/txtlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Anime Quiz"
        android:textColor="@android:color/black"
        android:textSize="35sp" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/text_view_highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgQuiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Highscore: 0"
        android:textSize="20sp" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_below="@id/text_view_highscore"
        android:id="@+id/button_start_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Start Quiz" />

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/txtAnime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_start_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Select an anime"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txtAnime"
        android:layout_marginTop="16dp" />

</RelativeLayout>